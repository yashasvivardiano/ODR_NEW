# ODR AI System Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# AI PROVIDER API KEYS (REQUIRED)
# =============================================================================
# Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
# Groq: https://console.groq.com/keys
# Gemini: https://makersuite.google.com/app/apikey

OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# AI CONFIGURATION
# =============================================================================
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4o-mini

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://odr_user:secure_password@localhost:5432/odr_ai

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings for production
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_CREDENTIALS=true

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
# Maximum file size in bytes (100MB default)
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads
PROCESSED_DIR=processed

# File retention settings
FILE_RETENTION_DAYS=30
AUTO_CLEANUP=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/odr_ai.log
LOG_ROTATION=10MB
LOG_RETENTION=7 days

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set to true in production
PRODUCTION=false

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
